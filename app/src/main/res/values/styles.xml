<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.FoodNow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/uber_green</item>
        <item name="colorPrimaryVariant">@color/uber_black</item>
        <item name="colorOnPrimary">@color/uber_white</item>
        <item name="colorSecondary">@color/uber_black</item>
        <item name="colorSecondaryVariant">@color/uber_black</item>
        <item name="colorOnSecondary">@color/uber_white</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/uber_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Text appearances -->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/uber_black</item>
    </style>
    <style name="TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/uber_black</item>
    </style>
    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/uber_black</item>
    </style>
</resources>
